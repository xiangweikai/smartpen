<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_custom_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/timer_custom_duration" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30分钟"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60分钟"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90分钟"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/text_remaining_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/timer_remaining_time" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/timer_enable" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/timer_start" />

</LinearLayout>