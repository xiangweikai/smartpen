<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 放大镜开关 -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_magnifier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="启用放大镜"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- 放大镜大小控制 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="放大区域大小"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/seekbar_magnifier_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="5"
                        android:progress="4" />

                    <TextView
                        android:id="@+id/text_magnifier_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="4"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- 放大倍数控制 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="放大倍数"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_zoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_2x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2x" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_3x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3x" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_4x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4x" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_5x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5x" />
                </com.google.android.material.chip.ChipGroup>

                <!-- 预览区域 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="效果预览"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/preview_container"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white">

                    <!-- 这里将通过自定义View实现放大镜效果预览 -->
                    <View
                        android:id="@+id/magnifier_preview"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/magnifier_preview_background" />

                </FrameLayout>

                <!-- 形状选择 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="放大镜形状"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radio_group_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_circle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="圆形" />

                    <RadioButton
                        android:id="@+id/radio_square"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="方形" />
                </RadioGroup>

                <!-- 操作按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_apply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="应用设置"
                    android:textSize="16sp"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>